<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/rounded_edittext.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="4dip"
                android:topRightRadius="4dip"
                android:bottomLeftRadius="4dip"
                android:bottomRightRadius="4dip" />
            <gradient android:startColor="#d0d2d4" android:endColor="#a9abae" android:angle="270" />
            <stroke android:width="2px" android:color="#E6E6E6" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="4dip"
                android:bottomRightRadius="4dip"
                android:topLeftRadius="4dip"
                android:topRightRadius="4dip" />
            <solid android:color="#FFFFFFFF" />
            <stroke android:width="2px" android:color="#E6E6E6" />
        </shape>
    </item>
</selector>